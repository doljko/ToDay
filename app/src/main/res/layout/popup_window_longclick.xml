<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_longclick"
    android:background="@color/primary_text_default_material_light"
    android:paddingTop="9dp"
    android:paddingBottom="9dp">
    <!-- 12dp to account for 48dp from scaled ImageViews-->

    
    <ImageView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="30dp"
        android:background="@color/primary_text_default_material_light"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@drawable/today_color_edit"
        android:id="@+id/popup_edit_item"
        />

    <ImageView

        android:layout_marginRight="30dp"
        android:layout_marginLeft="15dp"
        android:background="@color/primary_text_default_material_light"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@drawable/today_color_trash"
        android:id="@+id/popup_delete_item"/>



</LinearLayout>
